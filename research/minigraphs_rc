# Enable grid
axes.grid : True

# Disable top and right spines, keep left and bottom spines
axes.spines.top : False
axes.spines.right : False
axes.spines.left : True
axes.spines.bottom : True

# Grid settings
grid.linestyle : --
grid.color : gray
grid.alpha : 0.6

# Font settings
font.family : sans-serif
font.sans-serif : Helvetica, Arial, DejaVu Sans
font.size : 12

# Title and label sizes
axes.titlesize : 16
axes.labelsize : 14

# Line and marker properties
lines.linewidth : 2.0
lines.markersize : 6

# Legend and tick sizes
legend.fontsize : 12
xtick.labelsize : 12
ytick.labelsize : 12

# Figure size
figure.figsize : 6, 4

# Savefig settings
savefig.dpi : 300
